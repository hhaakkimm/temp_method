
<div class="sign_up col-lg-6 col-md-6">
  <div class="sign_up_header">
    <h1>Изменение профиля</h1>
  </div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name))    do |f| %>
    <%= devise_error_messages! %>

    <div class="sign_up_form">
      <div class="field">
        <h4><%= f.label :Фото %></h4>
        <%= f.file_field :avatar,class:"avatar"%>
      </div>
      <br>

      <div class="field">
        <%= f.label :Имя %><br />
        <%= f.text_field :name,class:"input"%>
      </div>

      <div class="field">
        <%= f.label "Обо мне" %><br />
        <%= f.text_field :about,class:"input"%>
      </div>

      <div class="field">
        <%= f.label "Контактный телефон" %><br />
        <%= f.text_field :contact,class:"input"%>
      </div>

      <div class="field">
        <%= f.label "Почта" %><br />
        <%= f.email_field :email,class:"input" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>


      <div class="field">
        <%= f.label "Текущий пароль" %> <i>(Введите текущий пароль чтобы сохранить изменения)</i><br />
        <%= f.password_field :current_password, autocomplete: "off" %>
      </div>

      <%= f.radio_button :check, true %> Company <br/>
      <%= f.radio_button :check, false %> User <br>


      <div class="actions">
        <%= f.submit "Обновить",class:"sign_up_button1" %>
      </div>
      <br>
    <% end %>

    <div class="delete_account">
        <%= button_to "Удалить страницу", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
        <%= link_to "Back", :back %>
    </div>




  </div>
</div>
