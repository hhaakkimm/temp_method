<div class="project_form ">
<%= form_for(@project) do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %>
      prohibited this project from being saved:</h2>

      <ul>
      <% @project.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>



  <div class="col-2">
      <label class = "main_labels">
        <%= f.label 'Название' %>
        <%= f.text_field :title,placeholder:"Название вашей задачи"%>
      </label>
    </div>
    <div class="col-2">
      <label class = "main_labels">
        <%= f.label 'Описание' %>
        <%= f.text_field :description, rows: 6, placeholder:"Описание задачи, гипотеза решения" %>
      </label>
    </div>

    <div class="col-3">
      <label class = "main_labels">
        <%= f.label :Вознаграждение%>
        <%= f.text_field :price,placeholder:"Введите сумму" %>
      </label>
    </div>

    <div class="col-3">
      <label class = "main_labels">
        <%= f.label 'Сроки выполнения' %>
        <%= f.date_field :deadline%>
      </label>
    </div>
    <div class="col-3">
      <label class = "main_labels">
        <%= f.label :Ментор %>
        <%= f.email_field :mentor,placeholder:"Введите его почту"%>
      </label>
    </div>

    <div class="col-lg-12 mentor">
      <label class = "radio_labels">

          <div class="clear_me row col-lg-4 col-lg-offset-4 col-xs-8 col-xs-offset-2">
            <%= f.label :sts , 'В процессе', :value => "1"%>
            <%= f.radio_button :sts, '1'%>
          </div>
          <div class="clear_me row col-lg-4 col-lg-offset-4 col-xs-8 col-xs-offset-2">
            <%= f.label :sts , 'На рассмотрении', :value => "0"%>
            <%= f.radio_button :sts, '0' %>
          </div>
          <div class="clear_me row col-lg-4 col-lg-offset-4 col-xs-8 col-xs-offset-2">
            <%= f.label :sts , 'Завершен', :value => "-1"%>
            <%= f.radio_button :sts, '-1' %>
          </div>






      </label>
    </div>
    <div class="actions">
      <%= f.submit "Создать" , class:"create_button"%>
    </div>


<% end %>
</div>
