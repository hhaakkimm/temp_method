<h1>Your projects</h1>
<% if current_user.check == true %>
  <table>
  <% @myprojects.each do |project| %>
    <% if project.user == current_user %>

      <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
        <td class="list_description">
          <dl>

            <dt><%= project.title %></dt>
            <dt><%= project.price %></dt>
            <dt><%= project.mentor %></dt>
            <dd><%= project.description %></dd>

          </dl>
        </td>
        <td class="list_actions">
          <%= link_to 'Show', project %><br/>
          <%= link_to 'Edit', edit_project_path(project) %><br/>
          <%= link_to 'Destroy', project, method: :delete,
                      data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  <% end %>
  </table>
  <br/>
  <% if user_signed_in? %>
    <%= link_to 'New project', new_project_path %>
  <% end %>
  <br/>
<% else %>
  <% @myprojects.each do |project| %>
    <% if current_user.following?(project.id) %>
      <div class="follow_status">
      <%= render "partials/follow_status", object: project %>
      </div>
      <h4>Company: <%= link_to project.user.email, project%></h4>
      <h4>title of project: <%= link_to project.title, project %></h4>
      <hr>
    <% end %>
  <% end %>
<% end %>

<input type="button" onclick="history.back();" value="back"/>
