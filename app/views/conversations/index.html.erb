<div class="ui segment">
 <h3>Переписки</h3>

 <div class="ui list">
  <div class="item">
   <% @conversations.each do |conversation| %>
   <% if conversation.sender_id == current_user.id ||      conversation.recipient_id == current_user.id %>
    <% if conversation.sender_id == current_user.id %>
      <% recipient = User.find(conversation.recipient_id) %>
    <% else %>
      <% recipient = User.find(conversation.sender_id) %>
    <% end %>
    <%= image_tag recipient.avatar(:thumb) %> <br/>
    <%= link_to recipient.name,   conversation_messages_path(conversation)%>

   <% end %>
  <% end %>
  </div>
 </div>
</div>

<div class="ui segment">
 <h3>Все пользователи</h3>
  <div class="ui list">
   <% @users.each do |user| %>
    <% if user.id != current_user.id %>
     <div class="item">
       <%= image_tag user.avatar(:thumb) %>  <br/>
   <%= user.name %> <%= link_to 'написать', conversations_path(sender_id: current_user.id, recipient_id: user.id), method: 'post'%>
 </div>
  <% end %>
 <% end %>
 </div>
</div>
<input type="button" onclick="history.back();" value="Назад"/>
